shell-emulator=true
# 使用更稳定的 registry
registry=https://registry.npmjs.org/

# 增加网络超时时间
fetch-timeout=60000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# 禁用严格的 SSL（如果网络问题）
strict-ssl=false

# pnpm 特定配置
shamefully-hoist=false
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*astro*